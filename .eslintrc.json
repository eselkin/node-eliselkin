{
  "plugins": ["node"],
  "extends": ["eslint:recommended", "plugin:node/recommended"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "json": true
    }
  },
  "env": {
    "browser": true,
    "node": true
  },
  "settings": {
    "ecmascript": 6
  },
  "rules": {
    "node/exports-style": ["error", "module.exports"],
    "indent": ["error", 2]
  }
}
